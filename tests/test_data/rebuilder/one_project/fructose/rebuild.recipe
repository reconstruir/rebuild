!rebuild.recipe!

package fructose 3.4.5-6
  steps
    step_autoconf
      tarball
        all: ${REBUILD_PACKAGE_NAME}-${REBUILD_PACKAGE_UPSTREAM_VERSION}.tar.gz
      configure_env
        all: CFLAGS=${REBUILD_COMPILE_CFLAGS}
        linux: CFLAGS="-I${REBUILD_REQUIREMENTS_INCLUDE_DIR} -std=gnu99"
      configure_flags
        all: --enable-static --disable-shared
      tests
        all: fructose1-test.c
        all: fructose2-test.c
        all: fructose-1and2-test.c
