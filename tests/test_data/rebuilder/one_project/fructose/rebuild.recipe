!rebuild.recipe!

package fructose 3.4.5-6
  steps
    step_autoconf
      tarball_dir
         all: ${REBUILD_SOURCE_DIR}/../../../sources/${REBUILD_PACKAGE_NAME}-${REBUILD_PACKAGE_UPSTREAM_VERSION}
         
      configure_env
        all: CFLAGS=${REBUILD_COMPILE_CFLAGS}
        linux: CFLAGS="-I${REBUILD_REQUIREMENTS_INCLUDE_DIR} -std=gnu99"
        
      configure_flags
        all: --enable-static --disable-shared
