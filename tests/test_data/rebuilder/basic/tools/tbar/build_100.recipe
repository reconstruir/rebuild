!rebuild.recipe!

package tbar 1.0.0

  requirements
    all: TOOL tfoo >= 1.0.0

  env_vars
    all: TBAR_ENV1=foo TBAR_ENV2=bar

  steps
    step_setup
      no_tarballs: True
      
    step_post_install
      install_files
        all: ${REBUILD_SOURCE_DIR}/files/bin/tbar.py bin/tbar.py
        all: ${REBUILD_SOURCE_DIR}/files/bin/tbar_code_gen.py bin/tbar_code_gen.py
        
      tests
        all: test-tbar.sh test-tbar-env-var.sh
        
      skip_binary_third_party_prefix: True
