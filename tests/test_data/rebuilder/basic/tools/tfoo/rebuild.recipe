!rebuild.recipe!

package tfoo-1.0.0

  env_vars
    all: TFOO_ENV1=tfoo_env1 TFOO_ENV2=tfoo_env2

  steps
    step_setup
      no_tarballs: True
      
    step_post_install
      install_files
        all: ${REBUILD_SOURCE_DIR}/files/bin/tfoo.py bin/tfoo.py
        
      tests
        all: test-tfoo.sh test-tfoo-env-var.sh
        
      skip_binary_third_party_prefix: True
