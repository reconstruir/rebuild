!rebuild.recipe!

package libstarch 1.0.0

  steps  
    step_setup
      tarball_dir:
        all: libs/libstarch/src dest=${REBUILD_BUILD_DIR}
    step_make
      make_flags
        linux: CC=gcc CFLAGS=-std=c99
        #macos: AR=${AR_REPLACEMENT}
        macos: CC=clang CFLAGS="${REBUILD_COMPILE_ARCH_FLAGS}"
    step_make_install
    step_post_install
      pc_files
        all: libstarch.pc
      skip_binary_third_party_prefix: True
      tests
        all: test-libstarch.c
