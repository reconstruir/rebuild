!rebuild.recipe!

package libstarch 1.0.0

  steps  
    step_setup
      tarball_dir:
        all: c_libs/libstarch/src dest=${REBUILD_BUILD_DIR}
    step_make
      make_flags
        all: CFLAGS="${REBUILD_COMPILE_CFLAGS} -std=c99"
        darwin: AR=${AR_REPLACEMENT}
        linux: CC=gcc
        macos: CC=clang
        
    step_make_install
      make_install_flags
        all: CFLAGS="${REBUILD_COMPILE_CFLAGS} -std=c99"
        darwin: AR=${AR_REPLACEMENT}
        linux: CC=gcc
        macos: CC=clang
    step_post_install
      pc_files
        all: libstarch.pc
      skip_binary_third_party_prefix: True
      tests
        all: test-libstarch.c
