!rebuild.recipe!

package water 1.0.0

  steps
    step_setup
      
    step_post_install
      install_files
        all: ${REBUILD_RECIPE_DIR}/files/bin/water.py bin/water.py
        
      tests
        all: test-water.sh
        all: test-water-env.sh
        
      skip_binary_third_party_prefix: True

      env_files
        all: water_env.sh

