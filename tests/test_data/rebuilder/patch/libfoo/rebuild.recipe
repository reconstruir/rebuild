!rebuild.recipe!

package libfoo 1.0.0

  steps  
    step_setup
      tarball_dir:
        all: libfoo/src dest=${REBUILD_BUILD_DIR}
      patches
        all: libfoo.patch
      patch_dir
        all: ${REBUILD_BUILD_DIR}
      patch_strip_depth: 3
        
    step_make
      make_flags
        linux: CC=gcc CFLAGS=-std=c99
        macos: CC=clang CFLAGS="${REBUILD_COMPILE_ARCH_FLAGS}"
        
    step_make_install
    
    step_post_install
      pc_files
        all: libfoo.pc
      skip_binary_third_party_prefix: True
      tests
        all: test-libfoo.c
